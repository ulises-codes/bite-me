{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "skipLibCheck": true,
    "sourceMap": true
  }
}
